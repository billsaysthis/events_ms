<%- model_class = Speaker -%>
<div class="page-header">
  <h1><%=t '.title', :default => Speaker %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @speaker.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @speaker.url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bio) %></dt>
      <dd><pre class="prettyprint"><%= @speaker.bio %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:photo) %></dt>
      <dd><pre class="prettyprint"><%= @speaker.photo %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              speakers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_speaker_path(@speaker), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              speaker_path(@speaker),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

